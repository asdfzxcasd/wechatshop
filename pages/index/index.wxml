<view class="img">
    <image class="" src="/icos/hahaha.jpg" mode="widthFix">
        
    </image>
</view>


<view class="pyg_index">
  <search></search>
  <!-- 轮播图 -->
  <view class="index_swiper">
<!-- swiper标签默认宽高100%*150px -->
    <swiper
    interval="2000"
    autoplay
    indicator-dots
    circular
    >

  <!-- 原图是750*340 -->
      <swiper-item
      wx:for="{{swiperlist}}"
      wx:key="goods_id"
      >
        <navigator>
      <!-- 图片标签的mode属性widefix让图片的标签宽高和图片标签内容的宽高等比例发生变化 -->
          <image src="{{item.image_src}}">
        
          </image>
        </navigator>
      </swiper-item>
    </swiper>
  
  </view>
<!-- 轮播图 -->

<!-- 导航 -->
  
  <view class="index_cate">
    <view class="zero">
      <picker id="zero_money"><text>零元购</text></picker>
    </view>
    <view class="zero_pay">
     <navigator
    wx:for="{{cateslist}}"
    wx:key="name"
    >
      <image src="{{item.image_src}}" mode="widthFix" >   
      </image>
    </navigator>
    </view>
  
  </view>
<!-- 导航 -->


<!-- 通知 -->
<view class="tongzhi">
  <swiper autoplay interval="2000" vertical="true" circular class="swiper_container">
    <swiper-item 
     wx:for="{{noricelist}}"
     wx:key="id"
    >
      <!-- <image class="laba" src="../../icos/laba.png"></image> -->
      <view class="swiper_item"><text>{{item.noricecontent}}</text></view>
    </swiper-item>
  </swiper>
</view>
<!-- 通知 -->


<view class="play">
    
        <view class="playimg">
            拼团大厅
        </view>
    
</view>

<!--  -->


<!-- 最新爆款，人气最高 -->
<view class="new_people">
<!-- 顶部标题栏 -->
  <view class="new_people_top">
    <view class="new_top {{hover?'mg1':''}}" bindtap = "handle" data-new="1">
      最新爆款
    </view>
    <view class="people_top {{hover?'':'mg2'}}" bindtap = "handle" data-new="2">
      人气最高
    </view>
  </view>
  <!-- 底部商品栏 -->
  <view class="new_people_bottom">
    <navigator class="goods_item"
      wx:for="{{goodslist}}"
      wx:key="goods_id"
      url="/pages/goos_detail/index?goods_id={{item.goods_id}}"
      >
        <!-- 左侧图片容器 -->
        <view class="goods_img">
          <image mode="widthFix" src="{{item.goods_small_logo?item.goods_small_logo:'//bpic.588ku.com/element_pic/20/07/01/a5d1d2ef3b15734009f10d083d012383.jpg!/fw/253/quality/90/unsharp/true/compress/true'}}"></image>
        
        </view>
        <!-- 右侧商品容器 -->
        <view class="goods_title">
          <view class="goods_name">{{item.goods_name}}</view>
          <view class="goods_price"><text class="one">拼团:<text class="two">￥{{item.goods_price}}</text></text><text class="tress">原价:{{original}}</text></view>
          <view class="progress-box">
            <progress percent="{{speed}}" active stroke-width="10" border-radius="10"/>
          </view>
          <!-- 已拼团 -->
          <view class="group">
            <text class="one_one">已拼团:{{already}}次</text>
            <text class="one_two">5/25人已拼团</text>
          </view>
        </view>
      </navigator> 
  </view>
</view>















  <!-- 楼层 -->
  <view class="index_floor">
    <view class="floor_group"
    wx:for="{{floorlist}}"
    wx:for-item="item1"
    wx:for-index="index1"
    wx:key="floor_title"
    >
      <!-- 标题 -->
      <view class="floor_title">
        <image src="{{item1.floor_title.image_src}}" mode="widthFix">
          
        </image>
        
      </view>
      <!-- 内容 -->
      <view class="floor_list">
        <navigator 
        wx:for="{{item1.product_list}}"
        wx:for-item="item2"
        wx:for-index="index2"
        wx:key="name"
        
        >
          <image src="{{item2.image_src}}" mode="{{index2===0?'widthFix':'scaleToFill'}}">
            
          </image>
        
          
        </navigator>
        
      </view>
      
    </view>
    
  </view>
  <!-- 楼层 -->
</view>