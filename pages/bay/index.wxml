<!-- 收货地址 -->
<view class="revice_address">
   
    
    <!-- 当收货地址存在详细信息显示 -->
    <view class="user_info_row">
        <view class="user_info">
            <view>{{address.userName}}</view>
            <view>
                {{address.provinceName+address.cityName+address.countyName+address.detailInfo}}
            </view>
        </view>
        <view class="user_phone">{{address.telNumber}}</view>
    </view>
</view>
<!-- 购物车 -->


<view class="cart_content">
    <view class="cart_title">购物车</view>
    <view class="cart_main">
        
            <view class="cart_item"
        wx:for="{{cart}}"
        wx:key="goods_id"
        
        >
          
            <!-- 商品图片 -->
            <navigator>
                <image src="{{item.goods_small_logo}}" mode="widthFix"></image>
            </navigator>
            <!-- 商品信息 -->
            <view class="cart_wrap">
                <view class="carp_wrap_title">{{item.goods_name}}</view>
                <view class="carp_wrap_price">
                    <!-- 左边价格 -->
                    <view class="goods_price">￥{{item.goods_price}}</view>
                    <!-- 右边按钮 -->
                    <view class="goods_button">
                        
                        <view class="goods_num">{{item.num}}</view>
                       
                    </view>
                </view>
            </view>
        </view>
            



    </view>
</view>


<!-- 底部工具栏 -->
<view class="foot_tool">

   
    <!-- 总价格 -->
    <view class="all_price">
        <view class="total_price">
            合计：<text class="total_price_text">￥{{allprice}}</text>
        
        </view>
        <view>包含运费</view>
    
    </view>
    <!-- 结算 -->
    <view class="older_pay" bindtap = "handleorderpay">
        支付（{{allnum}}）
    </view>

</view>