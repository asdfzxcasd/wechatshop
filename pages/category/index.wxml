<view class="cates">
    <search></search>
    <view class="cates_container">
        <!-- 左侧菜单  *htis代表在for循环的item本身-->
        <scroll-view class="left_menu" scroll-y="{{true}}">
            <view class="menu_item {{index===currentIndex?'active':''}}"
            wx:for="{{leftlist}}"
            wx:key="*this"
            bindtap = "handleitem"
            data-index="{{index}}"
            >
                {{item}}
                
            </view>
    
        </scroll-view>

        <!-- 右侧商品 -->
        <scroll-view scroll-top="{{top}}" class="right_content" scroll-y="{{true}}">
            <view class="goods_group"
            wx:for="{{rightcontent}}"
            wx:for-index="index1"
            wx:for-item="item1"
            >
                <view class="goods_title">
                    <text class="demiliter">/</text>
                    <text class="title">{{item1.cat_name}}</text>
                    <text class="demiliter">/</text>
                </view>
                <view class="goods_list">
                    <navigator
                    wx:for="{{item1.children}}"
                    wx:for-index="index2"
                    wx:for-item="item2"
                    wx:key="cat_id"
                    url="/pages/goods_list/index?cid={{item2.cat_id}}"
                    >
                        <image mode="widthFix" src="{{item2.cat_icon}}">
                            
                        </image>
                        <view class="goods_name">{{item2.cat_name}}</view>
                        
                    </navigator>
                </view>
            </view>
         
            
        </scroll-view>
        
    </view>
    
</view>