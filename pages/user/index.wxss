#notice {
  display: flex;
  flex-direction: column;
}
#notice .top {
  width: 100%;
  height: 15vh;
  border-bottom: 2px solid black;
  display: flex;
}
#notice .top .left {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-left: 10vw;
}
#notice .top .left image {
  width: 80%;
  height: 80%;
}
#notice .top .right {
  flex: 4;
  margin-left: 5vw;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 10vw;
}
#notice .top .right .right_bottom {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  margin-top: 10rpx;
}
.play {
  width: 100%;
  height: 10vh;
  display: flex;
  justify-content: center;
  align-items: center;
}
.play .play_title {
  width: 50%;
  height: 100%;
  border: 1px solid black;
  background-color: aqua;
  border-radius: 10%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 5vh;
  flex-direction: row;
}
.play .play_title .playtitle {
  height: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
}
.play .play_title .playimg {
  padding-right: 0;
  margin-left: 10%;
  flex: 2;
  font-size: 1.3rem;
}
